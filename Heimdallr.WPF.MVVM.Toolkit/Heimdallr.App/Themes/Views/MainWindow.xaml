<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:Heimdallr.ToolKit.UI.Controls;assembly=Heimdallr.ToolKit"
    xmlns:views="clr-namespace:Heimdallr.App"
    xmlns:conve="clr-namespace:Heimdallr.ToolKit.Converters;assembly=Heimdallr.ToolKit">


  <Style TargetType="{x:Type views:MainWindow}"
          BasedOn="{StaticResource {x:Type ctrls:DarkThemeWindow}}">
    <Setter Property="Content">
      <Setter.Value>

        <Border Background="Transparent" Padding="20">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="200"/>
              <RowDefinition />
              <RowDefinition />
              <RowDefinition />
              <RowDefinition />
              <RowDefinition />
              <RowDefinition />
              <RowDefinition />
            </Grid.RowDefinitions>

            <!-- Use the custom HeimdallrListView -->
            <ctrls:HeimdallrListView ItemsSource="{Binding People}" Margin="10" Grid.Row="0"
                              Background="gray">

              <ctrls:HeimdallrListView.View>
                <ctrls:HeimdallrGridView>
                  <ctrls:HeimdallrGridView.ColumnHeaderContainerStyle>
                    <Style TargetType="GridViewColumnHeader">
                      <Setter Property="Background" Value="#FF7A1CAC"/>
                      <Setter Property="Foreground" Value="#FFFFFFFF" />
                      <Setter Property="Height" Value="50" />
                      <!-- Padding을 0으로 설정 -->
                      <Setter Property="Padding" Value="0" />
                      <!-- Margin을 0으로 설정 -->
                      <Setter Property="Margin" Value="0" />
                      <!-- 테두리 제거 -->
                      <Setter Property="BorderBrush" Value="Transparent" />
                      <!-- 테두리 두께 제거 -->
                      <Setter Property="BorderThickness" Value="0" />
                    </Style>
                  </ctrls:HeimdallrGridView.ColumnHeaderContainerStyle>
                <!-- First column: Index -->
                  <GridViewColumn Header="#" Width="50">
                    <GridViewColumn.CellTemplate>
                      <DataTemplate>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListViewItem}, 
                                      Converter={conve:IndexToNumberConverter}}" />
                      </DataTemplate>
                    </GridViewColumn.CellTemplate>
                  </GridViewColumn>

                  <!-- Second column: Name -->
                  <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}" />

                  <!-- Third column: Age -->
                  <GridViewColumn Header="Age" Width="100" DisplayMemberBinding="{Binding Age}" />
              </ctrls:HeimdallrGridView>
              </ctrls:HeimdallrListView.View>
            </ctrls:HeimdallrListView>

            <!-- 레이아웃의 어딘가에 사용자 지정 엄지 컨트롤을 적용합니다(예: 열 크기 조정) -->
            <ctrls:HeimdallrThumb Grid.Row="1" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" />


            <Viewbox Grid.Row="2">
              <ctrls:HeimdallrIcon Icon="Apple" Fill="White"/>
            </Viewbox>

            <Viewbox Grid.Row="3">
              <ctrls:HeimdallrIcon Image="Benz" Fill="White"/>
            </Viewbox>

            <Viewbox Grid.Row="4" Width="24" Height="24">
              <Path Data="M256,256z M0,0z M152.8,12C119.7,16.1 91.7,40.5 83.5,72.5 79,89.9 80.5,106.4 86,121.1 86.3,121.9 86.1,122.9 85.5,123.5L10.8,197.3C10.4,197.7,10.1,198.3,10.1,199L10.1,242.4C10.1,243.7,11.2,244.7,12.5,244.7L55,244.7C56.3,244.7,57.4,243.7,57.4,242.4L57.4,212C57.4,210.7,58.5,209.7,59.8,209.7L90.5,209.7C91.8,209.7,92.9,208.7,92.9,207.4L92.9,177C92.9,175.7,94,174.7,95.3,174.7L160.9,174.7C205.2,174.7 243.8,141.4 246.2,97.7 248.7,47 204.8,5.6 152.8,12z M172.5,113.2C156.2,113.2 143,100.1 143,84 143,67.9 156.2,54.8 172.5,54.8 188.8,54.8 202,67.9 202,84 202,100.1 188.8,113.2 172.5,113.2z"
                    Fill="White"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Viewbox>

      
            <ctrls:HeimdallrIcon PathIcon="Day" Fill="White" Grid.Row="5" Width="50" Height="50"/>
           

            <Viewbox Grid.Row="6" Width="20" Height="20">
              <Path Data="M 128,10 C 62.9,10,10,62.9,10,128 c 0,65.1,52.9,118,118,118 c 65.1,0,118-52.9,118-118 C 246,62.9,193.1,10,128,10 z M 128,242.6 c -63.2,0-114.6-51.4-114.6-114.6 C 13.4,64.8,64.8,13.4,128,13.4 c 63.2,0,114.6,51.4,114.6,114.6 C 242.6,191.2,191.2,242.6,128,242.6 z M 165.3,91.6 c 0-3.8,0.1-6.9,0.5-11 c -3.2,0.4-6.6,0.5-11.6,0.5 h -52.1 c -5,0-8.5-0.1-11.9-0.5 c 0.3,3.5,0.5,7.3,0.5,11.5 v 69 c 0,5.1-0.2,9.3-0.6,13 h 12.8 v -6.5 h 50 v 6.5 h 13 c -0.4-3.9-0.7-7.4-0.7-13 L 165.3,91.6 L 165.3,91.6 z M 152.9,156.3 h -50 v -27.6 h 50 V 156.3 z M 152.9,117.5 h -50 v -25 h 50" Fill="Red"/>
            </Viewbox>
          </Grid>
        </Border>

      </Setter.Value>
    </Setter>
</Style>
</ResourceDictionary>
