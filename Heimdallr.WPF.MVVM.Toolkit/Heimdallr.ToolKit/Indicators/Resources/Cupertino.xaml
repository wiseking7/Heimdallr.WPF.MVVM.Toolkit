<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:Heimdallr.ToolKit.Indicators"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <ControlTemplate x:Key="Cupertino" TargetType="{x:Type ctrls:LoadingIndicator}">
    <Grid x:Name="MainGrid" HorizontalAlignment="Center" VerticalAlignment="Center" >
      <Grid RenderTransformOrigin="0.5 0.5">
        <Grid.RenderTransform>
          <ScaleTransform 
              ScaleX="{DynamicResource IndicatorScaleX}"
              ScaleY="{DynamicResource IndicatorScaleY}"/>
        </Grid.RenderTransform>

        <Canvas Width="48" Height="48" Margin="10" >
          <Rectangle x:Name="Rectangle01" Canvas.Left="22" Canvas.Top="4"
                     Width="4" Height="10" Opacity="0.2" RadiusX="2" RadiusY="2"
                     Fill="{DynamicResource IndicatorForeground}" />

          <Rectangle x:Name="Rectangle02" Canvas.Left="22" Canvas.Top="4"
                     Width="4" Height="10" Opacity="0.2" RadiusX="2" RadiusY="2"
                     Fill="{DynamicResource IndicatorForeground}"
                     RenderTransformOrigin="0.5,0.5" >
            <Rectangle.RenderTransform>
              <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform Angle="30" />
                <TranslateTransform X="7.5" Y="2" />
              </TransformGroup>
            </Rectangle.RenderTransform>
          </Rectangle>
          
          <Rectangle x:Name="Rectangle03"
                  Canvas.Left="22"
                  Canvas.Top="4"
                  Width="4"
                  Height="10"
                  Fill="{DynamicResource IndicatorForeground}"
                  Opacity="0.2"
                  RadiusX="2"
                  RadiusY="2"
                  RenderTransformOrigin="0.5,0.5"
                  UseLayoutRounding="False"
                  >
            <Rectangle.RenderTransform>
              <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform Angle="60" />
                <TranslateTransform X="13" Y="7.5" />
              </TransformGroup>
            </Rectangle.RenderTransform>
          </Rectangle>
          <Rectangle
                  x:Name="Rectangle04"
                  Canvas.Left="22"
                  Canvas.Top="4"
                  Width="4"
                  Height="10"
                  Fill="{DynamicResource IndicatorForeground}"
                  Opacity="0.2"
                  RadiusX="2"
                  RadiusY="2"
                  RenderTransformOrigin="0.5,0.5"
                  UseLayoutRounding="False"
                  >
            <Rectangle.RenderTransform>
              <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform Angle="90" />
                <TranslateTransform X="15" Y="15" />
              </TransformGroup>
            </Rectangle.RenderTransform>
          </Rectangle>
          <Rectangle
                  x:Name="Rectangle05"
                  Canvas.Left="22"
                  Canvas.Top="4"
                  Width="4"
                  Height="10"
                  Fill="{DynamicResource IndicatorForeground}"
                  Opacity="0.2"
                  RadiusX="2"
                  RadiusY="2"
                  RenderTransformOrigin="0.5,0.5"
                  UseLayoutRounding="False"
                  >
            <Rectangle.RenderTransform>
              <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform Angle="120" />
                <TranslateTransform X="13" Y="22.5" />
              </TransformGroup>
            </Rectangle.RenderTransform>
          </Rectangle>
          <Rectangle
                  x:Name="Rectangle06"
                  Canvas.Left="22"
                  Canvas.Top="4"
                  Width="4"
                  Height="10"
                  Fill="{DynamicResource IndicatorForeground}"
                  Opacity="0.2"
                  RadiusX="2"
                  RadiusY="2"
                  RenderTransformOrigin="0.5,0.5"
                  UseLayoutRounding="False"
                  >
            <Rectangle.RenderTransform>
              <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform Angle="150" />
                <TranslateTransform X="7.5" Y="28" />
              </TransformGroup>
            </Rectangle.RenderTransform>
          </Rectangle>
          <Rectangle
                  x:Name="Rectangle07"
                  Canvas.Left="22"
                  Canvas.Top="34"
                  Width="4"
                  Height="10"
                  Fill="{DynamicResource IndicatorForeground}"
                  Opacity="0.2"
                  RadiusX="2"
                  RadiusY="2"
                  RenderTransformOrigin="0.562,0.3"
                  />
          <Rectangle
                  x:Name="Rectangle08"
                  Canvas.Left="22"
                  Canvas.Top="34"
                  Width="4"
                  Height="10"
                  Fill="{DynamicResource IndicatorForeground}"
                  Opacity="0.2"
                  RadiusX="2"
                  RadiusY="2"
                  RenderTransformOrigin="0.5,0.5"
                  >
            <Rectangle.RenderTransform>
              <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform Angle="30" />
                <TranslateTransform X="-7.5" Y="-2" />
              </TransformGroup>
            </Rectangle.RenderTransform>
          </Rectangle>
          <Rectangle
