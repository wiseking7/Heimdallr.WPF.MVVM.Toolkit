<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Heimdallr.ToolKit.UI.Controls">

  <Color x:Key="SelectedBackgroundColor">#FFE6F0FF</Color>
  <Color x:Key="HoverBackgroundColor">#FFEDF5FF</Color>

  <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="{StaticResource SelectedBackgroundColor}" />
  <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}" />
  <SolidColorBrush x:Key="GridBorderBrush" Color="#FFCCCCCC" />
  <SolidColorBrush x:Key="GridBackgroundBrush" Color="#FFFFFFFF" />
  <SolidColorBrush x:Key="SortArrowBrush" Color="#FF666666" />

  <Geometry x:Key="SortArrowGeometry">M 0 0 L 4 4 L 8 0 Z</Geometry>

  <Style TargetType="{x:Type ctrls:HeimdallrGridViewColumnHeader}">
    <Setter Property="FontSize" Value="16"/>
    <Setter Property="Background" Value="DarkRed"/>
    <Setter Property="Foreground" Value="Orange"/>
    <Setter Property="HorizontalContentAlignment" Value="Center"/>
    <Setter Property="Padding" Value="5"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ctrls:HeimdallrGridViewColumnHeader}">
          <Border
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="1"
            Padding="{TemplateBinding Padding}">
            <Grid>
              <ContentPresenter
              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
              RecognizesAccessKey="True"/>

              <!-- SortDirection 화살표 표시용 -->
              <Path x:Name="SortArrow"
                  Margin="4,0,0,0"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center"
                  Width="8"
                  Height="8"
                  Stretch="Uniform"
                  Fill="{TemplateBinding Foreground}"
                  Visibility="Collapsed"/>
            </Grid>
          </Border>
          <ControlTemplate.Triggers>
            <!-- 오름차순 화살표 -->
            <Trigger Property="ctrls:HeimdallrGridViewColumnHeader.SortDirection"
                   Value="Ascending">
              <Setter TargetName="SortArrow" Property="Data"
                    Value="M 0 4 L 4 0 L 8 4 Z"/>
              <Setter TargetName="SortArrow" Property="Visibility"
                    Value="Visible"/>
            </Trigger>

            <!-- 내림차순 화살표 -->
            <Trigger Property="ctrls:HeimdallrGridViewColumnHeader.SortDirection"
                   Value="Descending">
              <Setter TargetName="SortArrow" Property="Data"
                    Value="M 0 0 L 4 4 L 8 0 Z"/>
              <Setter TargetName="SortArrow" Property="Visibility"
                    Value="Visible"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>