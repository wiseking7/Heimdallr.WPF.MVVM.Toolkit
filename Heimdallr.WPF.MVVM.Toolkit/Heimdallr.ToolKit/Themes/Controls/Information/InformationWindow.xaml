  <Style TargetType="{x:Type ctrls:InformationWindow}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ctrls:InformationWindow}">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Padding="10"
                  SnapsToDevicePixels="True">

            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <!-- 닫기 버튼 -->
              <Button x:Name="PART_CloseButton"
                      Grid.Row="0"
                      Content="✖"
                      FontSize="14"
                      ToolTip="닫기"
                      Foreground="#FF750E21"
                      Background="Transparent"
                      BorderThickness="0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="0,5,5,0"
                      Cursor="Hand" />

              <Grid Grid.Row="1" Margin="0 5 0 5">
                <Path Data="{StaticResource Hiemdallr}"
                      Height="118"
                      Width="300"
                      StrokeDashOffset="0"
                      StrokeThickness="5"
                      Stretch="Fill"
                      StrokeStartLineCap="Triangle"
                      StrokeEndLineCap="Triangle"
                      StrokeDashArray="500"
                      x:Name="MyPath"
                      Margin="0 10 0 10"
                      SnapsToDevicePixels="True">
                  <Path.Stroke>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                      <GradientStop x:Name="B1" Color="Purple" Offset="0.0"/>
                      <GradientStop x:Name="B2" Color="Beige" Offset="0.5"/>
                    </LinearGradientBrush>
                  </Path.Stroke>

                  <Path.Triggers>
                    <EventTrigger RoutedEvent="Path.Loaded">
                      <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                          <DoubleAnimation Storyboard.TargetName="MyPath"
                           Storyboard.TargetProperty="StrokeDashOffset"
                           From="500" To="0"
                           Duration="0:0:11"
                           BeginTime="0:0:0"/>
                          <DoubleAnimation Storyboard.TargetName="B1"
                           Storyboard.TargetProperty="Offset"
                           From="0.0" To="1.1"
                           BeginTime="0:0:0"
                           Duration="0:0:11"/>
                        </Storyboard>
                      </BeginStoryboard>
                    </EventTrigger>
                  </Path.Triggers>
                </Path>
              </Grid>
              <!--<TextBlock x:Name="TextBlockTitle" Grid.Row="1"
                         Text="HEIMDALLR SYSTEM INFORMATION"
                         FontSize="20"
                         Foreground="#FFFFFFFF"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         Margin="0,5,0,0" />-->

              <StackPanel Grid.Row="2" Margin="10 5 10 10" >
                <TextBlock x:Name="TextBlockVersion" FontSize="20" Margin="0 5" Foreground="#FF940B92">
                            ● <Run Text="VERSION : " FontWeight="Bold"/>
                            <Run Text="1.0.0"/>
                </TextBlock>

                <TextBlock x:Name="TextBlockStatus" FontSize="20" Margin="0 5" Foreground="#FF940B92">
                            ● <Run Text="STATE : " FontWeight="Bold"/>
                            <Run Text="원활한 상태"/>
                </TextBlock>

                <TextBlock x:Name="TextBlockLastUpdate" FontSize="20" Margin="0 5" Foreground="#FF940B92">
                            ● <Run Text="LAST UPDATE : " FontWeight="Bold"/>
                            <Run Text="2025-06-16 13:45"/>
                </TextBlock>

                <TextBlock x:Name="TextBlockSoftware" FontSize="20" Margin="0 5" Foreground="#FF940B92">
                            ● <Run Text="SOFTNAME : " FontWeight="Bold"/>
                            <Run Text="HEIMDALLR"/>
                </TextBlock>

                <TextBlock x:Name="TextBlockOS" FontSize="20" Margin="0 5" Foreground="#FF940B92">
                            ● <Run Text="OS : " FontWeight="Bold"/>
                            <Run Text="Windows 10 Pro"/>
                </TextBlock>

                <TextBlock x:Name="TextBlockFramework" FontSize="20" Margin="0 5" Foreground="#FF940B92">
                            ● <Run Text="FRAMEWORK : " FontWeight="Bold"/>
                            <Run Text=".NET 8.0"/>
                </TextBlock>

                <!-- APP 실행후 경과시간 추가 계산 -->
                <TextBlock x:Name="TextBlockUptime" FontSize="20" Margin="0 5" Foreground="#FF940B92">
                            ● <Run Text="TIME ELAPSED SINCE APP EXECUTION : " FontWeight="Bold"/>
                            <Run Text="APP 실행 경과 시간"/>
                </TextBlock>

                <TextBlock x:Name="TextBlockDatabaseStatus" FontSize="20" Margin="0 5" Foreground="#FF940B92">
                            ● <Run Text="DATABASE STATE : " FontWeight="Bold"/>
                            <Run Text="Connected (MY Server)"/>
                </TextBlock>

                <TextBlock x:Name="TextBlockCurrentTime" FontSize="20" Margin="0 5">
                            ● <Run Text="CURRENT TIME : " Foreground="#FF940B92" FontWeight="Bold"/>
                            <Run Text="00:00:00"/>
                </TextBlock>

                <TextBlock x:Name="TextBlockCurrentDate" FontSize="20" Margin="0 5">
                            ● <Run Text="TODAY'S DATE: " Foreground="#FF940B92" FontWeight="Bold"/>
                            <Run Text="0000-00-00 (월)"/>
                </TextBlock>
              </StackPanel>
            </Grid>
          </Border>
          <!-- 애니메이션 트리거 -->
          <ControlTemplate.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
              <BeginStoryboard>
                <Storyboard>
                  <ColorAnimation Storyboard.TargetName="TextBlockVersion"
                   Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                   From="#FF940B92" To="#FFFF0000" Duration="0:0:1"
                   AutoReverse="True" RepeatBehavior="Forever"/>

                  <ColorAnimation Storyboard.TargetName="TextBlockStatus"
                   Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                   From="#FF940B92" To="#FFFF7F00" Duration="0:0:1.2"
                   AutoReverse="True" RepeatBehavior="Forever"/>

                  <ColorAnimation Storyboard.TargetName="TextBlockLastUpdate"
                   Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                   From="#FF940B92" To="#FFFFFF00" Duration="0:0:1.4"
                   AutoReverse="True" RepeatBehavior="Forever"/>

                  <ColorAnimation Storyboard.TargetName="TextBlockSoftware"
                   Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                   From="#FF940B92" To="#FF00FF00" Duration="0:0:1.6"
                   AutoReverse="True" RepeatBehavior="Forever"/>

                  <ColorAnimation Storyboard.TargetName="TextBlockOS"
                   Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                   From="#FF940B92" To="#FF0000FF" Duration="0:0:1.8"
                   AutoReverse="True" RepeatBehavior="Forever"/>

                  <ColorAnimation Storyboard.TargetName="TextBlockFramework"
                   Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                   From="#FF940B92" To="#FF4B0082" Duration="0:0:2"
                   AutoReverse="True" RepeatBehavior="Forever"/>

                  <ColorAnimation Storyboard.TargetName="TextBlockUptime"
                   Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                   From="#FF940B92" To="#FF8B00FF" Duration="0:0:2.2"
                   AutoReverse="True" RepeatBehavior="Forever"/>

                  <ColorAnimation Storyboard.TargetName="TextBlockDatabaseStatus"
                    Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                    From="#FF940B92" To="#FF00FFFF" Duration="0:0:2.4"
                    AutoReverse="True" RepeatBehavior="Forever"/>

                  <ColorAnimation Storyboard.TargetName="TextBlockCurrentTime"
                    Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                    From="#FF818FB4" To="#FFF5E8C7" Duration="0:0:2.2"
                    AutoReverse="True" RepeatBehavior="Forever"/>

                  <ColorAnimation Storyboard.TargetName="TextBlockCurrentDate"
                    Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                    From="#FF4477CE" To="#FF8CABFF" Duration="0:0:2.4"
                    AutoReverse="True" RepeatBehavior="Forever"/>
                </Storyboard>
              </BeginStoryboard>
            </EventTrigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>

      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>